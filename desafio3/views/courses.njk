{% extends "layout.njk" %}

{% block head %}

    <title>Cursos - Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %}

  <div class="container">
    <h1>Cursos</h1>
  </div>

  <section class="cards">

    {% for item in items %}
      <div class="card" id="starter">
        <div class="card_img">
          <img
            src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/{{ item.img_id }}.svg"
            alt="Logo {{ item.name }}"
          />
        </div>
        <div class="card_content">
          <p>{{ item.name }}</p>
        </div>
        <div class="card-info">
          <p>{{ item.modules }}</p>
          <p class="card-price">{{ item.price }}</p>
        </div>
      </div>
    {% endfor %}

    
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="maximize-modal">
        <i class="material-icons">aspect_ratio</i>
      </a>

      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="scripts.js"></script>

{% endblock %}
