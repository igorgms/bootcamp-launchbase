{% extends "layout.njk" %}

{% block head %}

    <title>Sobre - Rocketseat</title>
    
{% endblock %}

{% block content %}

  <div class="container">
    <img src="./images/logo_rocket.png" alt="logo_rocketseat" />
    <h1>{{ about.name }}</h1>
    <h2>{{ about.description }}</h2>
    <ul>
      {% for course in about.courses %}
        <li>{{ course }}</li>
      {% endfor %}
    </ul>
  </div>

  <div id="links-footer" class="links">

    {% for link in about.links %}
      <a href="{{ link.url }}"target="_blank">{{ link.name }}</a>
    {% endfor %}
  </div>

{% endblock %}

